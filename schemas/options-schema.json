{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://dithermark.com/options-schema.json",
    "title": "Dithermark-node Options",
    "description": "This document records options that can be passed to Dithermark-node",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "image": {
            "description": "Image filtering properties",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "preDither": {
                    "description": "Filters that are run before the image is dithered.",
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "pixelate": {
                            "description": "Amount. 0 means no change.",
                            "type": "integer",
                            "minimum": 0,
                            "maximum": 21
                        },
                        "brightness": {
                            "description": "Number as percent. 100 means no change.",
                            "type": "integer",
                            "minimum": 0,
                            "maximum": 300
                        },
                        "saturation": {
                            "description": "Number as percent. 100 means no change.",
                            "type": "integer",
                            "minimum": 0,
                            "maximum": 300
                        },
                        "contrast": {
                            "description": "Number as percent. 100 means no change.",
                            "type": "integer",
                            "minimum": 0,
                            "maximum": 300
                        },
                        "smooth": {
                            "description": "Amount. 0 means no change.",
                            "type": "integer",
                            "minimum": 0,
                            "maximum": 16
                        }
                    }
                },
                "dither": {
                    "description": "Options for dithering the image.",
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": [
                                "COLOR",
                                "BLACK_AND_WHITE"
                            ]
                        },
                        "colorSettings": {
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "colorCount": {
                                    "type": "number",
                                    "minimum": 2,
                                    "maximum": 18
                                },
                                "colorComparison": {
                                    "type": "string",
                                    "enum": [
                                        "LIGHTNESS",
                                        "HUE",
                                        "HUE_AND_LIGHTNESS",
                                        "WEIGHTED_HSL",
                                        "RGB",
                                        "LUMA"
                                    ]
                                },
                                "algorithm": {
                                    "type": "string",
                                    "enum": [
                                        "CLOSEST_COLOR",
                                        "RANDOM"
                                    ]
                                },
                                "colorSource": {
                                    "type": "string",
                                    "enum": [
                                        "PALETTE",
                                        "COLORS"
                                    ]
                                },
                                "palette": {
                                    "type": "string",
                                    "enum": [
                                        "Elevate",
                                        "Primaries",
                                        "Imperial",
                                        "Galaxy",
                                        "Ketchup",
                                        "Pueblo",
                                        "Kelp",
                                        "Seance",
                                        "Rose",
                                        "Wildfire",
                                        "Blueberry",
                                        "Ocean",
                                        "Lilac",
                                        "Sepia",
                                        "Lichen",
                                        "Bronze",
                                        "Shamrock",
                                        "Sandcastle",
                                        "Apricot",
                                        "Goldust",
                                        "Brass",
                                        "Patina",
                                        "Wildberry",
                                        "Sunny",
                                        "Faded",
                                        "Neon",
                                        "Watermelon",
                                        "Crystals",
                                        "Monochrome",
                                        "Mondrianchromatic"
                                    ]
                                },
                                "colors": {
                                    "type": "array",
                                    "minItems": 2,
                                    "maxItems": 18,
                                    "items": {
                                        "type": "string",
                                        "pattern": "^#[a-f]{6}$"
                                    }
                                }
                            },
                            "required": [
                                "colorCount",
                                "algorithm",
                                "colorComparison",
                                "colorSource"
                            ],
                            "if": {
                                "properties": {
                                    "colorSource": {
                                        "enum": [
                                            "PALETTE"
                                        ]
                                    }
                                },
                                "then": {
                                    "required": [
                                        "palette"
                                    ]
                                },
                                "else": {
                                    "required": [
                                        "colors"
                                    ]
                                }
                            }
                        }
                    },
                    "required": [
                        "type"
                    ],
                    "if": {
                        "properties": {
                            "type": {
                                "enum": [
                                    "COLOR"
                                ]
                            }
                        },
                        "then": {
                            "required": [
                                "colorSettings"
                            ]
                        }
                    }
                }
            }
        }
    },
    "required": []
}